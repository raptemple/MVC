<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>

    <!-- inject:css -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/node_modules/easy-autocomplete/dist/easy-autocomplete.css">
    <link rel="stylesheet" href="/node_modules/toastr/build/toastr.css">
    <link rel="stylesheet" href="/node_modules/bootstrap-sweetalert/dist/sweetalert.css">
    <link rel="stylesheet" href="/css/site.css">
    <!-- endinject -->

    <environment include="Development">

    </environment>
    <environment exclude="Development">

    </environment>
</head>
<body>
    @await Component.InvokeAsync("ClientNotifications.Notify")

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MVC</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - MVC</p>
        </footer>
    </div>

    <!-- inject:js -->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/node_modules/toastr/build/toastr.min.js"></script>
    <script src="/node_modules/bootstrap-sweetalert/dist/sweetalert.js"></script>
    <script src="/node_modules/easy-autocomplete/dist/jquery.easy-autocomplete.js"></script>
    <script src="/node_modules/underscore/underscore.js"></script>
    <script src="/js/site.js"></script>
    <script src="/js/delete.js"></script>
    <!-- endinject -->

    <environment include="Development">

    </environment>
    <environment exclude="Development">

    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
