@model List<Pet>

<h2>My Awesome Pets</h2>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Age</td>
            <td>Color</td>
            <td colspan="2">Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var pet in Model){
            <tr>
                <td>@pet.Id</td>
                <td>@pet.Name</td>
                <td>@pet.Age</td>
                <td>@pet.Color</td>
                <td>
                    <a class="btn btn-primary" asp-action="edit" asp-route-Id="@pet.Id">
                        Edit
                    </a>
                </td>
                <td>
                    <a class = "btn btn-danger delete"
                    data-id = "@pet.Id"
                    data-controller = "Pet"
                    data-action = "delete"
                    data-body-message = "Are you sure to delete this pet?">
                        Delete
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>